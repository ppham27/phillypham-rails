%p#notice= notice

%h2 Login
= form_for @user_session, url: login_path do |f|
  - if @user_session.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user_session.errors.count, "error")} prohibited login:"
      %ul
        - @user_session.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password
    = f.password_field :password
  .actions
    = f.submit 'Log In'

= link_to 'Home', root_path
